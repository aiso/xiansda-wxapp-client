/**app.wxss**/

.page{
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  line-height: 1.6;
  font-family: Microsoft Yahei, 'Roboto', sans-serif;
}
.page.with-toolbar-footer{
  padding-bottom: 50px;
}

.page-header{
  padding: 40px;
  display: flex;
  flex-direction:column;
}

.page-header-title{
  margin-bottom: 12px;
  text-align: left;
  font-weight: 400;
  font-size:20px;
}

.page-header-desc{
  font-size:14px;
  color:#888888;
}


.page-body{
  padding:0 15px;
}

.border-box{
  box-sizing: border-box;
}

.toolbar-footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  padding:10px;
  box-sizing: border-box;
  background: #f1f1f1;
}

.full-size{
  position: fixed;
  width:100%;
  height: 100%;
}

.flex-row{
  display: flex;
  flex-direction:row;
  align-items:center;
}
.flex-column{
  display: flex;
  flex-direction:column;
}

.flex-center{
  align-items:center;
  justify-content:center;
}

.flex-auto{
  flex: auto;
}

.border-top{
  border-top: 1rpx solid #D9D9D9;
}
.border-bottom{
  border-bottom: 1rpx solid #D9D9D9;
}

.list-item{
  padding: 10px;
  background-color: #fff;
  overflow: hidden;
  border-radius: 2px;
  cursor: pointer;
}

.p10{
  padding:10px;
}
.p20{
  padding:20px;
}
.pr10{
  padding-right: 10px;
}
.pl10{
  padding-left: 10px;
}
.pr20{
  padding-right: 20px;
}
.pl20{
  padding-left: 20px;
}


.text-center{
  text-align: center;
  margin-left: auto;
  margin-right:auto;
}
.text-ls{
  letter-spacing: 1px;
}
.text-big{
  font-size:20px;
}
.text-title{
  font-size:16px;
}
.text-desc{
  font-size:14px;
}
.text-small{
  font-size:12px;
}
.text-gray{
  color:#888;
}
.text-light{
  color:#b2b2b2;
}


.c-primary{
  color:#09bb07;
}
.c-red{
  color:#e64340;
}
.c-black{
  color:#000;
}
.c-semi{
  color:#353535;
}
.c-gray{
  color:#888888;
}
.c-light{
  color:#b2b2b2;
}

.plr20{
  padding:0 20px;
}

.bg-soft{
  background: #f1f1f1;
}


.pane{
  margin: 10px;
}


.ib{
  display: inline-block;
}

.avatar{
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.avatar.small{
  width: 40px;
  height: 40px;
}
.avatar.big{
  width: 80px;
  height: 80px;
}


.square{
  width:60px;
  height:60px;
}

.icon{
  width:32px;
  height:32px;
}
.icon.small{
  width:16px;
  height:16px;
}