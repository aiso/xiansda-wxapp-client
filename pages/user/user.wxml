<!--index.wxml-->
<view class="page">
  <view class="page-header">
  	<view class="flex-row">
	  <image src="{{user.profile.img}}" class="avatar"></image>
	  <view class="pl20 flex-column">
		<text class="text-title">{{user.profile.name}}</text>	
		<text class="text-desc c-gray">客户</text>
	  </view>
  	</view>
  </view>

  <view class="page-body">
  	<navigator url="../station/show?id={{station.id}}">
	  	<view class="list-item flex-row border-top">
	  		<text class="text-title flex-auto plr10">{{station.name}}</text>
	  		<text class="text-desc c-light">服务站</text>
	  	</view>
  	</navigator>
  </view>
</view>