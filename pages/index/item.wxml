<view class="page">
	<swiper indicator-dots="{{indicatorDots}}"
	  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
	  <block wx:for="{{prod.images}}" wx:key="id">
	    <swiper-item>
	      <image src="{{item.url}}" class="page-image"  mode="aspectFill"/>
	    </swiper-item>
	  </block>
	</swiper>
	<view class="pane border-top">
		<view class="flex-row">
			<view class="flex-auto pr20">
				<text class="mb10">{{prod.title}}</text>
			</view>
			<view class="text-center flex-column">
				<text class="text-bold c-red">￥{{prod.price}}</text>
				<text class="text-h4 c-gray single-line" style="width:160rpx">{{prod.supplier.name}}</text>
			</view>
		</view>
	</view>
	<view class="bg-soft flex-row c-gray">
		<view class="field-img"></view>
		<text class="text-h4 field-station p10">服务站</text>
		<text class="text-h4 field-fee p10">代理费</text>
		<text class="text-h4 field-amount p10">价格</text>
		<text class="text-h4 field-order p10">下单</text>
	</view>
	<view class="bg-white border-top flex-row" wx:for="{{prod.agents}}" wx:key="id">
		<view class="field-img p10">
			<image class="avatar small text-center" src="{{item.station.img}}"></image>
		</view>
		<text class="text-h4 c-gray single-line field-station ib p10" style="width:160rpx">{{item.station.name}}</text>
		<text class="text-h4 field-fee p10">{{item.fee}}</text>
		<text class="text-h4 field-amount p10">价格</text>
		<text class="text-h4 field-order p10">下单</text>
	</view>
</view>