/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.general{
  color:#444;
  font-family: Microsoft Yahei, 'Roboto', sans-serif;
  font-size:24rpx;
}

.flex-row{
  display: flex;
  flex-direction:row;
  align-items:center;
}

.flex-column{
  display: flex;
  flex-direction:column;
}

.flex-auto{
  flex: auto;
}

.divider{
  background: #f3f3f3;
  width: 100%;
  height: 15rpx;
}

.avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.full-width{
	width: 750rpx;
}

.border-box{
  box-sizing: border-box;
}

.padding-left-right{
  padding:0 20rpx;
}

.pane{
  padding:20rpx;
  box-sizing: border-box;
}

.pane-image{
  width: 100%;
  height: 400rpx;
}

.text-center{
  text-align: center;
}
.text-ls{
  letter-spacing: 2rpx;
}
.text-h3{
  font-size:32rpx;
  line-height: 1.8;
  font-weight: 600;
}

.list-item{
  padding:15rpx 0;
  border-top: 1px solid #e7e7e9;
}